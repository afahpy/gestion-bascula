<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "classpath://org/hibernate/hibernate-configuration-3.0.dtd"
        [ <!ENTITY hibernate-core SYSTEM "classpath://com/coreweb/hibernate-core.cfg.xml"> ]>
<hibernate-configuration>

	<session-factory>

		<!-- Postgres PROPERTIES -->

		<property name="connection.driver_class">org.postgresql.Driver</property>
		<property name="connection.url">jdbc:postgresql://localhost:5432/basculadb</property>

		<property name="connection.username">postgres</property>
		<property name="connection.password">postgres</property>

		<!-- Fin Postgres -->

		<!-- ===== Hibernate Core ==================== -->
		
		&hibernate-core;


		<!-- **************Hibernate Domain Bascula***************** -->

		<mapping resource="com/bascula/domain/MyObject.hbm.xml" />
		<mapping resource="com/bascula/domain/MovimientoEntradaSalida.hbm.xml" />
		<mapping resource="com/bascula/domain/MovimientoDetalle.hbm.xml" />

		<!-- ********************************************* -->

	</session-factory>

</hibernate-configuration>
